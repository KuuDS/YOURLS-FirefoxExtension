{
		"manifest_version": 2,
		"name": "YOURLS WebExtension",
		"version": "2.2.0",
		"description": "Shorten URLs with your own YOURLS instance",
		"homepage_url": "https://s.binfalse.de/2f",
		"applications": {
			"gecko": {
					"id": "yourls-shortener@binfalse.de",
					"strict_min_version": "51.0"
			}
		},
		"icons": {
			"48": "yourls-48.png"
		},
		"permissions": [
			"activeTab",
			"storage",
			"clipboardWrite",
			"contextMenus",
			"<all_urls>"
		],
		"background": {
			"scripts": ["background.js"]
		},
		"options_ui": {
			"browser_style": true,
			"page": "options.html"
		},
		"browser_action": {
			"browser_style": true,
			"default_icon": "yourls-48.png",
			"default_title": "YOURLS",
			"default_popup": "popup.html"
		}
}
